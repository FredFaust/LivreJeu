doctype html
html(ng-app="LivreJeu")
  head
    title= title
    meta(http-equiv="content-type", content="#{contentType}; charset=UTF-8")
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='/stylesheets/nav.css')
    link(rel='stylesheet', href='/stylesheets/modal.css')
    link(rel='stylesheet', href='/stylesheets/modal.css')
    block extraHeaders
    script(src='/lib/jquery-2.1.4.min.js')
    script(src='/lib/underscore-1.8.3.min.js')
    block extraScripts
    block angularScripts
  body
    .page-wrap
      nav()
        ul.navlinks
          li
            a(href='/home', class=selectedNav === 'home' ? 'nav-selected' : 'nav-not-selected') Accueil
          li
            a(href='/create', class=selectedNav === 'game' ? 'nav-selected' : 'nav-not-selected') Jeu
          li
            a(href='/help', class=selectedNav === 'help' ? 'nav-selected' : 'nav-not-selected') Aide
        hr
      if errorMessage
        #error-block
          p #{errorMessage}
      block content
    footer.site-footer()
      hr
      p.no-padding Laboratoire #2  /  Présenté à M. Konstantinos Lambrou-Latreille  /  Par Jean-Frédéric Faust et Félix Pelletier
      p.no-padding 4 octobre 2015