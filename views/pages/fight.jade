extends layout

block content
    //Dummy data for the TP1
    -var hero = { name: 'Felix Le Vainqueur', ability: 10, endurance: 20, disciplines: 'Communication Animale, 6e Sens', equipment: 'Marteau de guerre, glaive', fights: [ { opponent: 'Le Seigneur de glaces', result: 'Victoire' } ]};
    h3 Combat vs. #{name}

    p(style='color:green') H&eacute;ros: #{heroname}
    ul
        li Habilet&eacute; : #{hero.ability}
        li Endurance : #{hero.endurance}
        li Disciplines Kai : #{hero.disciplines}
    
    p(style='color:red') Ennemi: #{name}
    ul 
        li Habilet&eacute; : #{ability}
        li Endurance : #{endurance}

    input#random(type='button', value='Attaquez')
    label(for='random', class='formLabel') 8

    p Historique du combat:
    ul
        li #{hero.name} inflige 2 points de dommage a #{name}.
        li #{name} donne une claque a #{hero.name}. Il perd 5 points d'endurance.
        li #{hero.name} frappe #{name} et il perd 4 points d'endurance.

    form(action='/pages/#{returnPage}')
        input(type='hidden', name="heroname", value='#{heroname}')
        input(type='submit', value='Terminer le combat')
