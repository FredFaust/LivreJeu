  p Bakanal HABILETÉ: 19 ENDURANCE: 30

  input(type='hidden', name="return_page", value='78')
  input(type='hidden', name="return_section", value='3')
  input(type='hidden', name="name", value='BAKANAL')
  input(type='hidden', name="ability", value='19')
  input(type='hidden', name="endurance", value='30')
